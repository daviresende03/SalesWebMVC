@model SalesWebMVC.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Sellers | @ViewData["Title"]</h1>
<hr style="border-bottom: 3px solid #2c3e50" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="formEdit"> <!--Chamando a ação Edit no envio do formulário-->
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form=group">
                <label asp-for="Seller.Name" class="contol-label"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form=group">
                <label asp-for="Seller.Email" class="contol-label"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form=group">
                <label asp-for="Seller.BirthDate" class="contol-label"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form=group">
                <label asp-for="Seller.BaseSalary" class="contol-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="btn-group-justified">
                <a asp-action="Index" class="btn btn-info">Back to List</a>
                <a asp-action="Delete" asp-route-id="@Model.Seller.Id" class="btn btn-danger">Delete</a>
                <a onclick='document.getElementById("formEdit").submit();' class="btn btn-default">Save</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}